<configure xmlns="http://namespaces.zope.org/zope"
	   xmlns:bfg="http://namespaces.repoze.org/bfg"
	   i18n_domain="repoze.bfg">

  <!-- this must be included for the view declarations to work -->
  <include package="repoze.bfg" />

  <bfg:view
     for=".models.IRange"
     view=".views.user_view"
     name="user_view"
     permission="view"
     />

  <bfg:view
     for="repoze.bfg.interfaces.IRoutesContext"
     view=".views.idea_view"
     name="ideas"
    />

  <bfg:view
     for="repoze.bfg.interfaces.IRoutesContext"
     view=".views.user_view"
     name="users"
    />

  <bfg:view
     for=".models.IRange"
     view=".views.main_view"
     permission="view"
     />

  <bfg:view
     for=".models.IRange"
     view=".views.user_add"
     name="register"
     permission="view"
     />

  <bfg:view
     for=".models.IRange"
     view=".views.idea_add"
     name="idea_add"
     permission="post"
     />

  <bfg:view
     for=".models.IRange"
     view=".views.idea_vote"
     name="idea_vote"
     permission="post"
     />

  <bfg:view
     for=".models.IRange"
     view=".views.logout_view"
     name="logout"
     permission="post"
     />

  <bfg:view
     for=".models.IRange"
     view=".views.login_view"
     name="login"
     permission="post"
     />

  <bfg:view
     for=".models.IRange"
     view=".views.toolbar_view"
     name="toolbar"
     permission="view"
     />

  <utility
      provides="repoze.bfg.interfaces.ISecurityPolicy"
      factory="repoze.bfg.security.RemoteUserACLSecurityPolicy"
  />

</configure>
